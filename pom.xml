<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0">

    <modelVersion>4.0.0</modelVersion>

    <groupId>autoplay</groupId>
    <artifactId>BattleAiMod</artifactId>
    <version>2.2.0</version>
    <packaging>jar</packaging>
    <name>Battle Ai Mod</name>
    <description>Server/Client setup allowing an AI to control the game</description>

    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <SlayTheSpire.version>11-30-2020</SlayTheSpire.version>
        <ModTheSpire.version>3.18.1</ModTheSpire.version>
        <BaseMod.version>5.32.0</BaseMod.version>
        <ModPath>${user.home}/.local/share/Steam/steamapps/workshop/content/646570</ModPath>
        <GamePath>${user.home}/.local/share/Steam/steamapps/common/SlayTheSpire</GamePath>
    </properties>

    <dependencies>
        <dependency>
            <groupId>SaveStateMod</groupId>
            <artifactId>SaveStateMod</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${GamePath}/mods/SaveStateMod.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>LudicrousSpeed</groupId>
            <artifactId>LudicrousSpeed</artifactId>
            <version>1.0.0</version>
            <scope>system</scope>
            <systemPath>${ModPath}/2848749218/LudicrousSpeed.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.megacrit.cardcrawl</groupId>
            <artifactId>slaythespire</artifactId>
            <version>${SlayTheSpire.version}</version>
            <scope>system</scope>
            <systemPath>${GamePath}/desktop-1.0.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.evacipated.cardcrawl</groupId>
            <artifactId>ModTheSpire</artifactId>
            <version>${ModTheSpire.version}</version>
            <scope>system</scope>
            <systemPath>${ModPath}/1605060445/ModTheSpire.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.evacipated.cardcrawl</groupId>
            <artifactId>BaseMod</artifactId>
            <version>${BaseMod.version}</version>
            <scope>system</scope>
            <systemPath>${ModPath}/1605833019/BaseMod.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <version>30.1.1-jre</version>
        </dependency>
<!--        <dependency>-->
<!--            <groupId>fightpredictor</groupId>-->
<!--            <artifactId>FightPredictor</artifactId>-->
<!--            <version>1.0.4</version>-->
<!--            <scope>system</scope>-->
<!--            <systemPath>${basedir}/../_ModTheSpire/mods/FightPredictor.jar</systemPath>-->
<!--        </dependency>-->
    </dependencies>

    <build>
        <finalName>BattleAiMod</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>2.4.2</version>
                <executions>
                    <execution>
                        <id>BattleAiMod</id>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <filters>
                                <filter>
                                    <artifact>autoplay:BattleAiMod</artifact>
                                </filter>
                            </filters>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <copy file="target/BattleAiMod.jar" tofile="${GamePath}/mods/BattleAiMod.jar"/>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
                <excludes>
                    <exclude>ModTheSpire.json</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>ModTheSpire.json</include>
                </includes>
            </resource>
        </resources>

    </build>

</project>